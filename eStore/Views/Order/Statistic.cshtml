
@{
    ViewData["Title"] = "Statistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Statistic</h1>

<div class="card chart-container mt-5">
    <canvas id="chart"></canvas>
</div>
<h4 class="d-flex justify-content-center mt-3">Order Statistic</h4>
<style>
    .chart-container {
        width: 50%;
        height: 50%;
        margin: auto;
    }
</style>
<script type="text/javascript">
    var result = [];
    result = @Html.Raw(Json.Serialize(ViewBag.orderDates));

    console.log(result);
    const ctx = document.getElementById("chart").getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: result,
            datasets: [{
                label: 'orders',
                backgroundColor: 'rgba(161, 198, 247, 1)',
                borderColor: 'rgb(47, 128, 237)',
                data: @Html.Raw(Json.Serialize(ViewBag.totals)),
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true,
                    }
                }]
            }
        },
    });
</script>

