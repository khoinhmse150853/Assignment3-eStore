@model IEnumerable<BusinessObject.TblMember>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 mb-5">List of products</h1>

@{
    if (@Accessor.HttpContext.Session.GetString("Role") == "AD")
    {
        <p class="mb-5">
            <button type="button" class="btn btn-outline-primary"><a asp-action="Create">Create New</a></button>
        </p>
    }
}


<form asp-action="Search" asp-controller="Member" method="get" class="mb-5">
    <div class="form-group row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row">
                <div class="col-md-3">
                    <label for="search" class="d-inline"> Member Id: </label>
                </div>
                <div class="col-md-8">
                    <input id="search" name="search" class="d-inline form-control" value="@ViewBag.Search" required />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label for="from" class="d-inline">Email:</label>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="form" class="d-inline mt-1">From</label>
                        </div>
                        <div class="col-md-10">
                            <input id="from" name="from" aria-describedby="unitPriceHelp" class="d-inline form-control" value="@ViewBag.From" type="number" required />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="to" class="d-inline mt-1">To</label>
                        </div>
                        <div class="col-md-10">
                            <input id="to" name="to" class="d-block form-control" value="@ViewBag.To" type="number" required />
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <div class="d-flex justify-content-center">
                    <input type="submit" class="btn btn-outline-primary d-inline mt-sm-3 mt-md-0" value="Search" name="op" />
                    <input type="submit" class="btn btn-outline-primary d-inline mt-sm-3 mt-md-0" value="Reset" style="margin-left: 5px" name="op" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberPassword)
            </td>
            <td>
                @{
                    if (@Accessor.HttpContext.Session.GetString("Role") == "AD")
                    {
                        <a asp-action="Edit" asp-route-id="@item.MemberId">Edit</a>
                    }
                }

                | <a asp-action="Details" asp-route-id="@item.MemberId">Details</a> |
                @{
                    if (@Accessor.HttpContext.Session.GetString("Role") == "AD")
                    {
                        <a asp-action="Delete" asp-route-id="@item.MemberId">Delete</a>
                    }
                }
            </td>
        </tr>
        }
    </tbody>
</table>
